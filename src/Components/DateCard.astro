---
const date = new Date()

const daysOfWeek = [
  'Sunday',
  'Monday',
  'Tuesday',
  'Wednesday',
  'Thursday',
  'Friday',
  'Saturday',
]
const dayOfWeek = daysOfWeek[date.getDay()]
const month = date.toLocaleString('default', { month: 'long' })
const day = date.getDate()
const year = date.getFullYear()
---

<p class='text-textColor-primary font-bold text-center text-2xl'>
  <span
    class='bg-gradient-to-r from-gradient-pink to-gradient-purple gradient text-3xl'
    >{dayOfWeek}</span
  >
  {month}
  {day}, {year}
</p>
