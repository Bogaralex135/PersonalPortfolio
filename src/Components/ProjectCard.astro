---
import ButtonLink from './ButtonLink.astro'
import Gradient from './Gradient.astro'

const { project } = Astro.props as { project: Project }

interface Project {
  name: string
  image: string
  technologies: string
  description: string
  github?: string
  live?: string
}
---

<div
  class='flex gap-4 w-full p-6 bg-baseColor-background rounded-bl-lg rounded-tr-lg'>
  <img src={project.image} alt={project.name} class='w-56 h-auto' />
  <div class='flex-1 flex flex-col gap-4'>
    <h3 class='text-xl font-bold text-textColor-primary'>{project.name}</h3>
    <Gradient>{project.technologies}</Gradient>
    <div class='flex justify-between items-center gap-4'>
      <p class='text-textColor-secondary'>{project.description}</p>
      <div class='flex gap-4'>
        {
          project.github && (
            <ButtonLink href={project.github} variant='primary'>
              Code
            </ButtonLink>
          )
        }
        {
          project.live && (
            <ButtonLink href={project.live} variant='secondary'>
              Live
            </ButtonLink>
          )
        }
      </div>
    </div>
  </div>
</div>
